<html lang="en"><head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">

    <title>Swipe a Job</title>
    <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" %>
    <%= javascript_include_tag "application" %>
    <script>
        $(document).ready(function() {
            Slider = $('#slider').Swipe({
//                auto: 3000,
//                continuous: true
            }).data('Swipe');

            $('.next').on('click', Slider.next);
            $('.prev').on('click', Slider.prev);
        });
    </script>

</head>

<body>

<div class="demo-wrapper">
    <div id="slider" class="swipe" style="visibility: visible;">
        <div class="swipe-wrap" style="width: 3000px; background-color: #ffffff">
            <% (@job_results).models.jobs.each do |job| %>
            <div data-index="0" style="width: 600px; left: 0px; transition-duration: 300ms; -webkit-transition-duration: 300ms; -webkit-transform: translate(-600px, 0px) translateZ(0px);">
              <tr>
              <td><div id="headerBar"><h4 align="center" style="color:#ffffff"><%= job.company_name %></h4></div></td>
              <td><h6><strong>Location:</strong> <%= job.location %></h6></td>
              <td><h6><strong>Job Title:</strong> <%= job.title %></h6></td>
              </tr>
            </div>
            <% end %>

        </div>

        <span class="nav prev">Prev</span>
        <span class="nav next">Next</span>

    </div>
</div>


</body></html>